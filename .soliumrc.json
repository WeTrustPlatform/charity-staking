{
  "extends": "solium:all",
  "plugins": [
    "security"
  ],
  "rules": {
    "quotes": [
      "error",
      "double"
    ],
    "indentation": [
      "error",
      2
    ],
    "arg-overflow": [
      "warning",
      4
    ],
    "error-reason": "off",
    "security/no-block-members": "off"
  }
}
